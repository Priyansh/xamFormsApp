            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "*" />
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column= "0" Grid.ColumnSpan="3" TextColor="White" HorizontalTextAlignment="Center"  Text = "1234" FontSize="50" />
